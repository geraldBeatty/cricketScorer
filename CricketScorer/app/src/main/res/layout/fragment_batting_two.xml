<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/team_one"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/batting_view"
    tools:context="com.example.rebeccaandgerald.cricketscorer.SecondTeamFragment"
    >

    <EditText
        android:id="@+id/team_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:hint="@string/team"
        android:imeOptions="actionDone"
        android:padding="10dp"
        android:singleLine="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/runs"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/runs_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="0"
                android:textSize="50sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/wickets"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/wickets_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="0"
                android:textSize="50sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">

        <EditText
            android:id="@+id/player_one_x"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:ellipsize="end"
            android:hint="@string/batsman_one"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:padding="8dp"
            android:singleLine="true" />

        <Button

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:id="@+id/one_run_one_x"
            android:text="+1"
            android:theme="@style/MyButton"
            />

        <Button
            android:layout_width="0dp"
            android:theme="@style/MyButton"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:id="@+id/four_runs_one_x"
            android:text="+4"
            />

        <Button
            android:layout_width="0dp"
            android:theme="@style/MyButton"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:id="@+id/six_runs_one_x"
            android:text="+6"
            />

        <Spinner
            android:id="@+id/spin_one_x"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.35"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">

        <EditText
            android:id="@+id/player_two_x"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:padding="8dp"
            android:hint="@string/batsman_two"
            android:singleLine="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:imeOptions="actionDone"/>

        <Button

            android:layout_width="0dp"
            android:theme="@style/MyButton"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:id="@+id/one_run_two_x"
            android:text="+1"
            />

        <Button
            android:layout_width="0dp"
            android:theme="@style/MyButton"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:id="@+id/four_runs_two_x"
            android:text="+4"
            />

        <Button
            android:layout_width="0dp"
            android:theme="@style/MyButton"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:id="@+id/six_runs_two_x"
            android:text="+6"
            />

        <Spinner
            android:id="@+id/spin_two_x"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.35"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:id="@+id/textView_x"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:padding="8dp"
            android:text="@string/extras"
            android:textSize="18sp"
            />

        <Button
            android:id="@+id/extras_button_x"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:theme="@style/MyButton"
            android:text="+1" />

        <View
            android:id="@+id/edt_thief_x"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2.75"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <TextView
            android:id="@+id/second_team_runs"
            android:layout_width="0dp"
            android:layout_height="0dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/batsman"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/runs"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_weight="1"
            android:gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="@string/how_out"
            android:layout_weight="1"
            android:gravity="center_horizontal"/>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/scrollView_x">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/b_one_name_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/one"
                    android:theme="@style/scoresheet"/>

                <TextView
                    android:id="@+id/b_two_name_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/two"
                    android:theme="@style/scoresheet"/>

                <TextView
                    android:id="@+id/b_three_name_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/three"
                    android:theme="@style/scoresheet"/>

                <TextView
                    android:id="@+id/b_four_name_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/four"
                    android:theme="@style/scoresheet"/>

                <TextView
                    android:id="@+id/b_five_name_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/five"
                    android:theme="@style/scoresheet"/>

                <TextView
                    android:id="@+id/b_six_name_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/six"
                    android:theme="@style/scoresheet"/>

                <TextView
                    android:id="@+id/b_seven_name_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/seven"
                    android:theme="@style/scoresheet"/>

                <TextView
                    android:id="@+id/b_eight_name_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/eight"
                    android:theme="@style/scoresheet"/>

                <TextView
                    android:id="@+id/b_nine_name_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nine"
                    android:theme="@style/scoresheet"/>

                <TextView
                    android:id="@+id/b_ten_name_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ten"
                    android:theme="@style/scoresheet"/>

                <TextView
                    android:id="@+id/b_eleven_name_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/eleven"
                    android:theme="@style/scoresheet"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/extras"
                    android:theme="@style/scoresheet"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/b_one_runs_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:theme="@style/scoresheet"/>

                <TextView
                    android:id="@+id/b_two_runs_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:theme="@style/scoresheet"/>

                <TextView
                    android:id="@+id/b_three_runs_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:theme="@style/scoresheet"/>

                <TextView
                    android:id="@+id/b_four_runs_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:theme="@style/scoresheet"/>

                <TextView
                    android:id="@+id/b_five_runs_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:theme="@style/scoresheet"/>

                <TextView
                    android:id="@+id/b_six_runs_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:theme="@style/scoresheet"/>

                <TextView
                    android:id="@+id/b_seven_runs_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:theme="@style/scoresheet"/>

                <TextView
                    android:id="@+id/b_eight_runs_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:theme="@style/scoresheet"/>

                <TextView
                    android:id="@+id/b_nine_runs_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:theme="@style/scoresheet"/>

                <TextView
                    android:id="@+id/b_ten_runs_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:theme="@style/scoresheet"/>

                <TextView
                    android:id="@+id/b_eleven_runs_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:theme="@style/scoresheet"/>

                <TextView
                    android:id="@+id/extras_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:theme="@style/scoresheet"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/b_one_out_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:theme="@style/scoresheet"/>

                <TextView
                    android:id="@+id/b_two_out_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:theme="@style/scoresheet"/>

                <TextView
                    android:id="@+id/b_three_out_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:theme="@style/scoresheet"/>

                <TextView
                    android:id="@+id/b_four_out_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:theme="@style/scoresheet"/>

                <TextView
                    android:id="@+id/b_five_out_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:theme="@style/scoresheet"/>

                <TextView
                    android:id="@+id/b_six_out_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:theme="@style/scoresheet"/>

                <TextView
                    android:id="@+id/b_seven_out_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:theme="@style/scoresheet"/>

                <TextView
                    android:id="@+id/b_eight_out_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:theme="@style/scoresheet"/>

                <TextView
                    android:id="@+id/b_nine_out_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:theme="@style/scoresheet"/>

                <TextView
                    android:id="@+id/b_ten_out_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:theme="@style/scoresheet"/>

                <TextView
                    android:id="@+id/b_eleven_out_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:theme="@style/scoresheet"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>